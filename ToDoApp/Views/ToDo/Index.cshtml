@model List<ToDoApp.Models.Category>

@if (Model.Count == 0)
{
    <p>No categories available at the moment.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>

                    <td>

                        <a href="@Url.Action("ToDoListByCategory", "ToDo", new { id = category.Id })" class="btn btn-primary btn-sm">View Details</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
